<!-- Friends sidebar -->
<div id="notification-modal" class="sidebar" style="position: relative;">
  <style>
      #remove_all_notifications{
          font-size: 15px;
          text-align: center;
          cursor: pointer;
          color: #3db16b;
      }
  </style>
  <header>
      <span>Thông Báo</span>
      <ul class="list-inline">
          <li class="list-inline-item d-lg-none d-sm-block">
              <a href="#" class="btn btn-light sidebar-close">
                  <i class="ti-close"></i>
              </a>
          </li>
      </ul>
  </header>
  <p id="remove_all_notifications">Xóa tòan bộ thông báo</p>
  <div class="sidebar-body">
      <ul class="list-group list-group-flush">
        <% listNotifications.forEach( notif => { %>
            <li class="list-group-item <% if(notif.isRead === false){%> unread_notification <%} %>" data-uid="<%= notif._id %>" >
                <div>
                    <figure class="avatar">
                        <img src="image/userImages/<%= notif.senderNotif.avatar %>" class="rounded-circle">
                    </figure>
                </div>
                <div class="users-list-body">
                    <h5 style="line-height: 22px !important; "><%- notif.content %></h5>
                    <p><i style="padding-right: 10px" class="fa fa-clock-o" aria-hidden="true"></i><%= notif.time %> </p>
                    <div class="users-list-action action-toggle">
                        <div class="dropdown">
                            <a data-toggle="dropdown" href="#">
                                <i class="ti-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="#" class="dropdown-item btn-cancel-req-contact" data-uid="<%= notif.senderNotif.id %>">Tắt thông báo từ người này</a>
                                <a href="#" data-navigation-target="contact-information" data-uid="<%= notif.senderNotif.id %>" class="dropdown-item active">Xem hồ sơ</a>
                                <a href="#" data-uid="<%= notif.senderNotif.id %>" class="dropdown-item">Chặn</a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>      
        <% } ) %>
      </ul>
  </div>
</div>
<!-- ./ Friends sidebar -->