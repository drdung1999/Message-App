              <button id="btn-close-settings-modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <i class="ti-close"></i>
              </button>
          </div>
          <div class="modal-body">
              <ul class="nav nav-tabs" role="tablist">
